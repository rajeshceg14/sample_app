<% provide(:title, @user.name + " Profile") %>

<div class="row">
  <% if current_user?(@user) %>
    <%= form_for @photo, :html => { :multipart => true } do |f| %>    
      <p>
        <b> Upload Photo </b>
        <%= f.file_field :image, as: :file, accept: 'image/png,image/gif,image/jpeg'  %>
      </p>
      
      <%= f.submit %>
    <%end%>
  <%end%>
</div>
<% if current_user?(@user) %>
<h3>Your Gallery (<%= @user.photos.count %>)</h3>
<% else %>
<h3><%=@user.name%>'s Gallery (<%= @user.photos.count %>)</h3>
<%end%>
<% if @user.photos.any? %>
  <div id="photo_pane" class="span6">      
  <%= will_paginate @photos %>    
  <ol style="list-style: none;" class="photos">
    <%= render @photos %>
  </ol>   
  </div>  
  <div style='width: 400px;'  class="span16">
    <div id="map" style='width: 300px; height: 500px;'></div>
  </div>
<%end%>  
  <script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyCcTQhM1RImvxwVyJCDAysJxRaeAsAJqog "></script>
  <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
